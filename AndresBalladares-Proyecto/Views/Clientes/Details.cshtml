@model List<AndresBalladares_Proyecto.Models.Cliente>
@{
    ViewData["Title"] = "Buscar cliente";
}
<h1>Buscar cliente</h1>

<style>
    .ListaHorizontal {
        overflow: hidden;
        table-layout: fixed;
        width: 102%;
        border-collapse: collapse;
        border: 1px black solid;
    }

    th, td {
        overflow-wrap: anywhere;
        width: 50%;
        border: 1px black solid;
        padding: 10px;
    }
</style>


@if (Model.Count > 0)
{
    <div class="ListaHorizontal">
        <h2 align="center">Datos de los clientes</h2>
        <table class="ListaHorizontal">
            <tr>
                <th>ID</th>
                <th>Clave</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Dinero comprado en total</th>
                <th>Dinero último año</th>
                <th>Dinero últimos seis meses</th>
            </tr>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.ID</td>
                    <td>@cliente.Clave</td>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Apellidos</td>
                    <td>@cliente.DineroCompradoTotal</td>
                    <td>@cliente.DineroCompradoUltimoAño</td>
                    <td>@cliente.DineroCompradoUltimosSeisMeses</td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <p>No se encontraron datos de clientes.</p>
}

    